						<file role="php" name="Creole.php">
							<replace type="package-info" from="@package_version@" to="version"/>
							<replace type="pear-config" from="@data_dir@" to="data_dir"/>
						</file>
					</dir>
					<file role="php" name="Exception.php">
						<replace type="package-info" from="@package_version@" to="version"/>
